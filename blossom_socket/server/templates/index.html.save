<body>
  <h1>Play Blossom sequence</h1>
    <div id='not-connected'>
	<button id="power-on-btn" onclick="powerOn()">Power On</button>
    </div>
    <div id='connected'>
	<button id="power-off-btn" onclick="powerOff()">Power Off</button>
	<form id="send-container">
		<input type="text" id="seq_name_input">
		<button type="submit" id="play-button" onclick="playSequence()">Play</button>
	</form>
	
	<!--Range sliders to controll Blossom motors-->
	<div class="slidecontainer">
	<input type="range" min="-10" max="10" value="0" class="slider" id="tower_1_input">
	</div>

	<div class="slidecontainer">
	<input type="range" min="-10" max="10" value="0" class="slider" id="tower_2_input">
	</div>

	<div class="slidecontainer">
	<input type="range" min="-10" max="10" value="0" class="slider" id="tower_3_input">
	</div>

	<div class="slidecontainer">
	<input type="range" min="-10" max="10" value="0" class="slider" id="base_input">
	</div> 
    </div>

